<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/button"
        android:layout_width="109dp"
        android:layout_height="98dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="60dp"
        android:background="@drawable/uparrow" />

    <EditText
        android:id="@+id/texty"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-69dp"
        android:ems="10"
        android:hint="default:192.168.43.94"
        android:inputType="textPersonName"
        android:textColorHint="#90fdfdfd" />

    <Button
        android:id="@+id/button2"
        android:layout_width="108dp"
        android:layout_height="99dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:background="@drawable/downarrow" />

    <Button
        android:id="@+id/button4"
        android:layout_width="101dp"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="187dp"
        android:background="@drawable/leftarrow" />

    <Button
        android:id="@+id/button5"
        android:layout_width="98dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rightarrow" />

    <Button
        android:id="@+id/button6"
        android:layout_width="135dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="69dp"
        android:background="@drawable/attack" />

    <Button
        android:id="@+id/set"
        android:layout_width="129dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/texty"
        android:layout_marginEnd="28dp"
        android:background="@drawable/submit" />

    <Button
        android:id="@+id/profile"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:background="@drawable/usual" />
</RelativeLayout>